<table class="table table-bordered table-responsive">
    <tr>
        <th>Title</th>
        <th>Username</th>
        <th>Access Route</th>
        <th class="text-center">Expiration</th>
        <th class="text-center">Actions</th>
    </tr>
    <tbody id="credentials-body">
        {% if credentials %}
            {% for credential in credentials %}
                <tr>
                    <td class="col-sm-1">
                        {{ credential.title }}
                    </td>
                    <td class="col-sm-2">
                        {{ credential.username }}
                    </td>
                    <td>
                        <div class="input-group">
                            <input type="text" class="form-control" name="url" id="url{{ credential.id }}" value="{{ domain }}/SecureCredentials/{{ credential.id }}/{{ credential.token }}">
                            <span class="input-group-addon">
                                <i class="btn fa fa-link" data-clipboard-target="#url{{ credential.id }}" data-toggle="tooltip" data-placement="top" title="Click to copy link"></i>
                            </span>
                        </div>
                    </td>
                    <td class="col-sm-3 text-center">
                        <span class="momentMe">{{ credential.expiration }}</span>
                    </td>
                    <td class="text-center col-sm-2">
                        <a class="btn btn-danger btn-xs revoke-access" href="/SecureCredentials/revokeAccess/{{user.id}}/{{credential.id}}/post"><i class="fa fa-times" data-toggle="tooltip" data-placement="top" title="revoke access"></i></a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="5">User does not have access to any credentials</td>
            </tr>
        {% endif %}
    </tbody>
</table>
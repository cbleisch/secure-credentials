<html>
    <head>
        {% block head %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
            <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.1/animate.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="{{ SecureCredentials.helper('assetUrl', '/onepage/css/styles.css') }}" />
            <title>Secure Credentials</title>
        {% endblock %}
    </head>
    <body>
        <div id="content">
            <section class="container-fluid" id="section1">
                <div class="v-center">
                    <h2 class="text-center">Email</h2>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3 text-center">
                            <form method="POST" action="/SecureCredentials/validate">
                                <input type="hidden" class="form-control" name="id" id="id" value="{{ credential.id }}">
                                <input type="hidden" class="form-control" name="token" id="token" value="{{ credential.token }}">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <input type="text" class="form-control" name="email" id="email" value="" autofocus>
                                </div>
                                <h3><button type="submit" class="btn btn-primary">Submit</button></h3>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div id="footer">
            {% block footer %}
                &copy; Copyright 2016 by <a href="http://domain.invalid/">Charles Bleisch</a>.
            {% endblock %}
            {% block scripts %}
                <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
                <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
                <script src="{{ SecureCredentials.helper('assetUrl', '/onepage/js/scripts.js') }}"></script>
                <script src="{{ SecureCredentials.helper('assetUrl', '/bower_components/clipboard/dist/clipboard.min.js') }}"></script>
                <script src="{{ SecureCredentials.helper('assetUrl', '/bower_components/moment/min/moment.min.js') }}"></script>
                <script src="{{ SecureCredentials.helper('assetUrl', '/bower_components/moment/min/moment-with-locales.js') }}"></script>
                <script src="{{ SecureCredentials.helper('assetUrl', '/bower_components/jquery.countdown/dist/jquery.countdown.min.js') }}"></script>
            {% endblock %}
        </div>
    </body>
</html>